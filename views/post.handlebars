<div class="text-center">
  <div>
    <h2>{{name}}</h2>
    <p>{{description}}</p>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </div>

  {{#if comments.length}}
    {{#each comments as |comment|}}
      <div class="row mb-4 comment">
        <div class="col-md-7">
          <p>
            {{comment.description}}
          </p>
        </div>
      </div>
    {{/each}}
  {{/if}}

  {{#if logged_in}}
    <div class="col-md-6">
      <h3>Leave a comment:</h3>

      <form class="form new-comment-form">
        <div class="form-group">
          <label for="comment-desc">comment:</label>
          <input
            class="form-input"
            type="text"
            id="comment-desc"
            name="comment-desc"
          />
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  {{else}}
    <a href="/login">Login to leave a comment</a>
  {{/if}}
</div>

{{#if logged_in}}
  <script src="../js/comment.js"></script>
{{/if}}